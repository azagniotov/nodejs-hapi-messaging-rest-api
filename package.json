{
  "name": "nodejs-hapi-messaging-rest-api",
  "version": "1.0.0",
  "description": "NodeJS with HapiJS Messaging RESTful API",
  "author": "Alexander Zagniotov <azagniotov@gmail.com>",
  "main": "app.js",
  "private": "true",
  "repository": {
    "type": "git",
    "url": "https://github.com/azagniotov/nodejs-hapi-messaging-rest-api"
  },
  "config": {
    "port": "3000",
    "host": "localhost"
  },
  "scripts": {
    "start": "./node_modules/nodemon/bin/nodemon.js",
    "test": "npm run models && npm run routes && npm run integration",
    "routes": "istanbul cover --include-all-sources _mocha -- --colors --growl --full-trace test/routes -R spec",
    "models": "istanbul cover --include-all-sources _mocha -- --colors --growl --full-trace test/models -R spec",
    "integration": "istanbul cover --include-all-sources _mocha -- --colors --growl --full-trace test/integration -R spec"
  },
  "bugs": {
    "url": "https://github.com/azagniotov/nodejs-hapi-messaging-rest-api/issues"
  },
  "license": "MIT",
  "dependencies": {
    "hapi": "^10.4.1",
    "joi": "^6.9.0",
    "jsonapi-serializer": "^2.0.3",
    "node-uuid": "^1.4.3",
    "sequelize": "^3.11.0",
    "sqlite3": "^3.1.0"
  },
  "devDependencies": {
    "codeclimate-test-reporter": "^0.1.1",
    "istanbul": "^0.3.22",
    "mocha": "^2.3.3",
    "chai": "^3.3.0",
    "nodemon": "^1.7.1"
  }
}
