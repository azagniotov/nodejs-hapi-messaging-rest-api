{
  "name": "nodejs-hapi-messaging-rest-api",
  "version": "1.0.0",
  "description": "NodeJS with HapiJS Messaging RESTful API",
  "author": "Alexander Zagniotov <azagniotov@gmail.com>",
  "main": "app.js",
  "private": "true",
  "repository": {
    "type": "git",
    "url": "https://github.com/azagniotov/nodejs-hapi-messaging-rest-api"
  },
  "config": {
    "port": "3000",
    "host": "localhost"
  },
  "scripts": {
    "start": "./node_modules/nodemon/bin/nodemon.js",
    "test": "npm run unit && npm run integration",
    "unit": "istanbul cover --include-all-sources ./node_modules/.bin/jasmine-node --color --growl --captureExceptions test/unit",
    "integration": "istanbul cover --include-all-sources ./node_modules/.bin/jasmine-node --color --growl --captureExceptions test/integration"
  },
  "bugs": {
    "url": "https://github.com/azagniotov/nodejs-hapi-messaging-rest-api/issues"
  },
  "license": "MIT",
  "dependencies": {
    "hapi": "^10.4.1",
    "joi": "^6.9.0",
    "jsonapi-serializer": "^2.0.3"
  },
  "devDependencies": {
    "codeclimate-test-reporter": "^0.1.1",
    "istanbul": "^0.3.22",
    "jasmine-node": "^1.14.5",
    "nodemon": "^1.7.1"
  }
}
